{
  "name": "perses-dev",
  "description": "Monorepo for the Perses UI",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "type-check": "turbo run type-check",
    "start": "turbo run start",
    "start-with-storybook": "turbo run start storybook:start",
    "storybook": "turbo run storybook:start",
    "storybook:build": "turbo run storybook:build",
    "storybook:serve": "turbo run storybook:serve",
    "storybook:serve-and-test": "turbo run storybook:serve-and-test",
    "storybook:happo": "npm run happo-ci-github-actions -w storybook",
    "clean": "turbo run clean",
    "reinstall": "npm run clean && rm -rf **/node_modules && npm install",
    "clear-turbo-cache": "rimraf node_modules/.cache/turbo",
    "e2e": "turbo run e2e:local",
    "e2e:debug": "turbo run e2e -- --debug",
    "e2e:ci": "turbo run e2e:ci",
    "typedoc": "typedoc"
  },
  "workspaces": [
    "app",
    "components",
    "core",
    "dashboards",
    "e2e",
    "internal-utils",
    "panels-plugin",
    "plugin-system",
    "prometheus-plugin",
    "storybook"
  ],
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.3",
    "@swc/jest": "^0.2.22",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^17.0.45",
    "@types/node-fetch": "^2.6.4",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "esbuild-loader": "^2.21.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.12",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "node-fetch": "^2.6.11",
    "prettier": "^2.8.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^5.0.1",
    "swc-loader": "^0.2.3",
    "turbo": "^1.10.0",
    "typedoc": "^0.24.7",
    "typescript": "^4.7.4",
    "wait-on": "^7.0.1"
  }
}
